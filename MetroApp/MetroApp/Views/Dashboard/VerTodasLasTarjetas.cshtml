@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Ver Todas las Tarjetas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/LoginContent/css/style.css" rel="stylesheet">
    <style>
        /* Estilos específicos para la vista "Ver Todas las Tarjetas" */
        .titulo-ver-tarjetas {
            color: black;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .nombre-tarjeta {
            color: black;
            font-weight: bold;
        }

        .tabla-tarjetas {
            width: 100%;
            border-collapse: collapse;
            background-color: #f2f2f2; /* Color de fondo sólido */
        }

            .tabla-tarjetas th,
            .tabla-tarjetas td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

        .boton-ver-todas {
            display: block;
            width: 150px;
            margin: 20px auto;
            padding: 10px;
            text-align: center;
            background-color: #4CAF50; /* Color de fondo del botón */
            color: white; /* Color del texto del botón */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .boton-ver-todas:hover {
                background-color: #45a049; /* Cambia el color de fondo al pasar el mouse */
            }
    </style>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <h2 class="titulo-ver-tarjetas">Lista de Todas las Tarjetas</h2>

            <div class="tarjeta-secundaria">
                <header>
                    <h6>Saldo en tarjeta</h6>
                </header>
                <h2>RD$150.00</h2>
            </div>

            <div class="otras-tarjetas">
                <h6 class="nombre-tarjeta">Tarjetas agregadas</h6>
                <table class="tabla-tarjetas">
                    <thead>
                        <tr>
                            <th>Tipo de tarjeta</th>
                            <th>Número de Tarjeta</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="~/LoginContent/Imagen/icons8-mastercard-48.png" alt="Ver metros"></td>
                            <td>********8495</td>
                        </tr>
                        <tr>
                            <td><img src="~/LoginContent/Imagen/icons8-visa-card-48.png" alt="Ver metros"></td>
                            <td>********9903</td>
                        </tr>
                        <!-- Agrega más filas según sea necesario -->
                    </tbody>
                </table>
                <a href="@Url.Action("Index", "Dashboard")" class="boton-ver-todas">Volver</a>
            </div>
        </div>
    </section>

    <script src="~/LoginContent/js/jquery.min.js"></script>
    <script src="~/LoginContent/js/popper.js"></script>
    <script src="~/LoginContent/js/bootstrap.min.js"></script>
    <script src="~/LoginContent/js/main.js"></script>

</body>
</html>